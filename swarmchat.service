# /etc/systemd/system/swarmchat.service

##################################################################
# NOTE - This file must be edited to reflect installation details
#################################################################

[Unit]
Description=SwarmChat FastAPI Application
After=network.target
Wants=network-online.target

[Service]
User=scooter
Group=scooter
WorkingDirectory=/home/scooter/projects/convo

# Preserve the system environment
Environment=LANG=en_US.UTF-8
Environment=LC_ALL=en_US.UTF-8
PassEnvironment=OPENAI_API_KEY

# Add environment check before starting
ExecStartPre=/bin/bash -c 'echo "OPENAI_API_KEY is: $OPENAI_API_KEY"'
ExecStart=/home/scooter/.virtualenvs/swarm/bin/uvicorn swarm_chat:app --host 0.0.0.0 --port 8000 --log-level info

Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

TimeoutStartSec=30
TimeoutStopSec=5
Type=simple
KillMode=mixed

[Install]
WantedBy=multi-user.target
